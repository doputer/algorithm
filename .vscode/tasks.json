  "version": "2.0.0",
  "tasks": [
    {
      "label": "python3",
      "type": "shell",
      "command": "python3",
      "args": ["${file}", "<", "test/input.txt", ">", "test/output.txt"],
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "options": {
        "env": {
          "PYTHONIOENCODING": "UTF-8"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
